{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Session History",
  "type": "object",
  "required": ["sessions"],
  "properties": {
    "sessions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["date", "topic", "participants"],
        "properties": {
          "date": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
          },
          "topic": { "type": "string" },
          "participants": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "role", "fluency_score"],
              "properties": {
                "name": { "type": "string" },
                "role": { "type": "string" },
                "fluency_score": { "type": "number", "minimum": 0, "maximum": 10 },
                "llm_fluency_score": { "type": ["number", "null"], "minimum": 0, "maximum": 10 },
                "grammar_error_count": { "type": ["integer", "null"], "minimum": 0 },
                "llm_error_rate": { "type": ["number", "null"], "minimum": 0 }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
