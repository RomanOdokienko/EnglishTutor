{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Session Analysis",
  "type": "object",
  "required": ["date", "session", "participants"],
  "properties": {
    "date": {
      "type": "string",
      "description": "Session date in YYYY-MM-DD format",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "session": {
      "type": "object",
      "required": ["topic", "duration_minutes"],
      "properties": {
        "topic": { "type": "string" },
        "duration_minutes": { "type": "number" }
      },
      "additionalProperties": false
    },
    "participants": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "role", "metrics", "fluency"],
        "properties": {
          "name": { "type": "string" },
          "role": { "type": "string" },
          "metrics": {
            "type": "object",
            "required": [
              "word_count",
              "turn_count",
              "avg_words_per_turn",
              "unique_word_count",
              "lexical_diversity"
            ],
            "properties": {
              "word_count": { "type": "integer", "minimum": 0 },
              "turn_count": { "type": "integer", "minimum": 0 },
              "avg_words_per_turn": { "type": "number", "minimum": 0 },
              "unique_word_count": { "type": "integer", "minimum": 0 },
              "lexical_diversity": { "type": "number", "minimum": 0 }
            },
            "additionalProperties": false
          },
          "fluency": {
            "type": "object",
            "required": ["score", "level"],
            "properties": {
              "score": { "type": "number", "minimum": 0, "maximum": 10 },
              "level": { "type": "string" }
            },
            "additionalProperties": false
          },
          "llm": {
            "type": "object",
            "properties": {
              "fluency": {
                "type": "object",
                "properties": {
                  "score": { "type": "number", "minimum": 0, "maximum": 10 },
                  "level": { "type": "string" }
                },
                "additionalProperties": false
              },
              "grammar": {
                "type": "object",
                "properties": {
                  "error_count": { "type": "integer", "minimum": 0 },
                  "error_rate_per_100_words": { "type": "number", "minimum": 0 },
                  "top_errors": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "required": ["title", "count", "examples"],
                      "properties": {
                        "title": { "type": "string" },
                        "count": { "type": "integer", "minimum": 0 },
                        "examples": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "required": ["text", "correction"],
                            "properties": {
                              "text": { "type": "string" },
                              "correction": { "type": "string" }
                            },
                            "additionalProperties": false
                          }
                        }
                      },
                      "additionalProperties": false
                    }
                  },
                  "top_recommendations": {
                    "type": "array",
                    "maxItems": 3,
                    "items": { "type": "string" }
                  }
                },
                "additionalProperties": false
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    },
    "transcript": { "type": "string" },
    "speaker_map": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },
    "chunks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["index", "block_indices", "text", "range"],
        "properties": {
          "index": { "type": "integer", "minimum": 0 },
          "block_indices": { "type": "array", "items": { "type": "integer" } },
          "text": { "type": "string" },
          "range": {
            "type": "object",
            "required": ["start", "end"],
            "properties": {
              "start": { "type": "integer", "minimum": 0 },
              "end": { "type": "integer", "minimum": 0 }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    },
    "llm": {
      "type": "object",
      "properties": {
        "status": { "type": "string" },
        "model": { "type": "string" },
        "error": { "type": "string" },
        "annotations_status": { "type": "string" },
        "annotations_error": { "type": "string" },
        "annotated_transcript_html": { "type": "string" },
        "annotation_items": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["start", "end", "text", "correction", "explanation"],
            "properties": {
              "start": { "type": "integer", "minimum": 0 },
              "end": { "type": "integer", "minimum": 0 },
              "text": { "type": "string" },
              "correction": { "type": "string" },
              "explanation": { "type": "string" }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
